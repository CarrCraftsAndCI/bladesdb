<% if category.show? current_user and category.entries(current_user).length > 0 %>
    <div class="span-5 last sidebarcategory">
        <h3>
            <%= link_to category.name, "#", class: "alt" %>
        </h3>
        <div class="span-5 last sidebarsection"
             id="sidebarsection<%= category.id %>"
             <% if !category.always_open %>
			 	style="display:none;"
			 <% end %>>
            <div>
                <ul>
                	<%= render :partial => "sidebars/entry", collection: category.entries(current_user) %>
                </ul>
            </div>
        </div>
    </div>
<% end %>

