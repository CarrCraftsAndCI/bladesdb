<span id="applicationlinks<%= game.id %>">
<br />[ 
<% if application %>
	<%= link_to "Edit application", edit_game_game_application_path(game, application), :method => :get, :remote => true %> |
	<%= link_to "Withdraw application", game_game_application_path(game, application), data: { confirm: 'Are you sure you wish to withdraw your application to run this game?' }, :method => :delete, :remote => true %>
<% else %>
	<%= link_to "Apply to run", new_game_game_application_path(game), :method => :get, :remote => true %>
<% end %>
]
</span>