<h1>Listing campaigns</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Current</th>
    <th>Start date</th>
    <th>End date</th>
  </tr>

<% @campaigns.each do |campaign| %>
  <tr>
    <td><%=h campaign.name %></td>
    <td><%=h campaign.current %></td>
    <td><%=h campaign.start_date %></td>
    <td><%=h campaign.end_date %></td>
    <td><%= link_to 'Show', campaign %></td>
    <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
    <td><%= link_to 'Destroy', campaign, data: { confirm: 'Are you sure?'}, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New campaign', new_campaign_path %>