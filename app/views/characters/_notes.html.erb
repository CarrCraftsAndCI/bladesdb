<% set_content_for :name do %>
    Notes
<% end %>

<% set_content_for :actions do %>
    <% if is_owner or is_ref_for_character and not character.recycled? %>
        [ <%= link_to "Edit", edit_notes_character_path(character), :method => :get, :remote => true %> ]
    <% end %>
<% end %>

<%= RedCloth.new( "#{character.notes}", [:filter_html] ).to_html.html_safe %>
<%= "&nbsp;".html_safe if character.notes.nil? or character.notes.strip.empty? %>
