<% set_content_for :name do %>
    Biography
<% end %>

<% set_content_for :actions do %>
    <% if is_owner or is_ref_for_character and not character.recycled? %>
        [ <%= link_to "Edit", edit_bio_character_path(character), :method => :get, :remote => true %> ]
    <% end %>
<% end %>

<%= RedCloth.new( "#{character.biography}", [:filter_html] ).to_html.html_safe %>
<%= "&nbsp;".html_safe if character.biography.nil? or character.biography.strip.empty? %>
