<% set_content_for :name do %>
    Player Notes
<% end %>

<% set_content_for :actions do %>
    <% if is_owner %>
        [ <%= link_to "Edit", edit_player_notes_character_path(character), :method => :get, :remote => true %> ]
    <% end %>
<% end %>

<%= RedCloth.new( "#{character.player_notes}", [:filter_html] ).to_html.html_safe %>
<%= "&nbsp;".html_safe if character.player_notes.nil? or character.player_notes.strip.empty? %>
