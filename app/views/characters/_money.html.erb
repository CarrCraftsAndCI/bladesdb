<% set_content_for :name do %>
    Money
<% end %>

<% set_content_for :actions do %>
    <% unless character.recycled? %>
        <% if current_user.is_character_ref? and character.user != current_user %>
            [
            <%= link_to "Transfer money to character", new_to_character_new_character_transaction_path(character), :method => :get, :remote => true %>
            |
            <%= link_to "Transfer money from character", new_character_transaction_path(character), :method => :get, :remote => true %>
            ]
        <% else %>
            [ <%= link_to "Transfer money", new_character_transaction_path(character), :method => :get, :remote => true %> ]
        <% end %>
    <% end %>
<% end %>

<%= money_for_display(character.money) %>
