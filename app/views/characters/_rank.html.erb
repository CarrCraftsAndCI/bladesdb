<% set_content_for :name do %>
    Rank
<% end %>

<% set_content_for :actions do %>
    <% unless character.recycled? %>
        <% if is_owner %>
            [
            <% if current_user.can_spend_monster_points? and character.can_spend_monster_points? %>
                <%= link_to "Spend monster points", new_character_monster_point_spend_path(character), :method => :get, :remote => true %>
            <% else %>
                Cannot spend monster points - <%= character.reason_for_being_unable_to_spend_monster_points %>
            <% end %>
            |
                <% unless character.last_monster_point_spend.nil? %>
                    <%= link_to "Edit last monster points spend", edit_character_monster_point_spend_path(character, character.last_monster_point_spend), :method => :get, :remote => true %>
                    |
                <% end %>
                <%= link_to "Request adjustment", new_character_character_point_adjustment_path(character), :method => :get, :remote => true %> 
            ]
        <% elsif is_ref_for_character %>
            [ 
                <%= link_to "Adjust", new_character_character_point_adjustment_path(character), :method => :get, :remote => true %> 
            ]
        <% end %>
    <% end %>
<% end %>

<%= character.rank %>
