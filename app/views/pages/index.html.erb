<h1 class="alt">Pages</h1>

<table>
	<thead>
		<tr>
  	  		<th>Page Title</th>
  	  		<th></th>
  		</tr>
	</thead>
	
	<tbody>
		<% @pages.each do |page| %>
			<tr id="page<%= page.id %>" class="<%= cycle('odd', 'even') %>">
		    	<td><%= page.title %></td>
		    	<td>[ <%= link_to 'Show', page %> | <%= link_to 'Edit', edit_page_path(page) %> | <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure you want to delete this page?' } %> ]</td>
		  	</tr>
		<% end %>
	</tbody>
</table>

<p align="right">[ <%= link_to "Add page", new_page_path %> ]</p>
