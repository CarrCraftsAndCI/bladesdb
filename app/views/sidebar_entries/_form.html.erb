<%= form_for @entry, :remote => true do |f| %>
    <%= f.error_messages %>

    <p>
        <%= f.hidden_field :sidebar_category_id %>
        <%= f.hidden_field :parent_entry_id %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br />
        <%= f.label "Static Page" %>
        <%= f.collection_select :page_id, 
                                Page.all, :id, :title, 
                                { :include_blank => true },
                                { :onchange => "if ( $('sidebar_entry_page_id').value == '' ) { $('sidebar_entry_url').enable(); } else { $('sidebar_entry_url').disable(); }; return false;" } %>
        <br />
        <%= f.label :url, "URL" %>
        <%= f.text_field :url %>
        <br />
    </p>
<% end %>

