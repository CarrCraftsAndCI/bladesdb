<% set_content_for :name do %>
    Medical Notes
<% end %>

<% set_content_for :actions do %>
    <% if is_owner or is_admin %>
        [ <%= link_to "Edit", edit_medical_notes_user_path(user), :method => :get, :remote => true %> ]
    <% end %>
<% end %>

<%= RedCloth.new( "#{user.medical_notes}", [:filter_html] ).to_html.html_safe %>
<%= "&nbsp;".html_safe if user.medical_notes.nil? or user.medical_notes.strip.empty? %>